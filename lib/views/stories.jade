extends _layouts/normal

block normal_content
  .row
    .col-xs-7
      .content-header
        h1= title
        .details= subTitle
    .col-xs-5.text-center
      .social-likes(data-url=site.head.canonical)
        each item in config.shareDataServices
          div(class=item)

  - var pages = stories.length/3
  - var i = 0
  while i < pages
    +storiesLargeView(stories.slice(i*3, i*3 + 3), {itemClass: 'col-sm-4 col-xs-12', lazyImage: true})
    - i++
    if (i===2)
      .group.text-center
        include ./controls/ads_center
  
  .section-header
    h3.type-quotes
      a(href=links.news.quotes({ul: currentCulture.lang}))= __('latest_quotes')
  +quotesList(quotes.slice(0, 3), {listClass: 'row', itemClass: 'col-xs-12 col-sm-4', wrapAt: 120})
  +quotesList(quotes.slice(3, 6), {listClass: 'row', itemClass: 'col-xs-12 col-sm-4', wrapAt: 120})
