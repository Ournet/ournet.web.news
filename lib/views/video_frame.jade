doctype html
html(lang=currentCulture.language)
  head
    meta(charset='utf-8')
    meta(http-equiv='X-UA-Compatible', content='IE=edge')
    meta(name='viewport', content='width=device-width, initial-scale=1.0')
    title= (site.head.title || site.title)
    style.
      html,body,#page{
        height: 100%;
      }
    link(rel='shortcut icon', href=config.favicon)
    style.
      html {
        margin: 0px;
        padding: 0px;
        font-family: 'helvetica neue', helvetica, arial, 'lucida grande', sans-serif;
        font-size: 14px;
        line-height: 14px;
        color: #333;
        background-color: #fff;
        background-color: transparent;
      }
      html, body{
        margin: 0px;
        padding: 0px;
      }

      html,
      body,
      #page {
        height: 100%;
      }

  body(class=('country-'+currentCulture.country+' project-'+project.name+' language-'+currentCulture.language))
    include ./mixins/video
    #page
      +video(videos[0])
    
    script.
      (function(i,s,o,g,r,a,m){i['GoogleAnalyticsObject']=r;i[r]=i[r]||function(){
      (i[r].q=i[r].q||[]).push(arguments)},i[r].l=1*new Date();a=s.createElement(o),
      m=s.getElementsByTagName(o)[0];a.async=1;a.src=g;m.parentNode.insertBefore(a,m)
      })(window,document,'script','//www.google-analytics.com/analytics.js','ga');
      ga('create', '#{config.googleAnalyticsId}', '#{config.domain}');
      ga('set', 'dimension1', '#{project.name}');
      ga('send', 'pageview');
      
    if (_events.length > 0)
      script
        each a in _events
          = "ga('send', 'event', '"+a.category+"', '"+a.action+"', '"+a.label+"', '"+a.value+"')"
