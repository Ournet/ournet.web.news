mixin video(video)
  if (video.sourceType === 'YOUTUBE')
    iframe(width='100%', height='100%', src='https://www.youtube.com/embed/'+video.sourceId+'?autoplay=1&origin=http://'+config.host, frameborder='0', allowfullscreen='')
  else if (video.sourceType === 'VIMEO')
    iframe(width='100%', height='100%', src='https://player.video.com/video/'+video.sourceId+'?autoplay=1&title=0&byline=0', frameborder='0', allowfullscreen='')
  else if (video.sourceType === 'IFRAME')
    iframe(width='100%', height='100%', src=video.sourceId, frameborder='0', allowfullscreen='')
  else if (video.sourceType === 'URL')
    video(src=video.sourceId, width='100%', height='100%', autoplay, controls)