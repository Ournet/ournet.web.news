block main_content
  .list-item.ot-quote
    .item.ot-quote(class='domain-'+(quote.category || ''))
      .item-body
        .item-name
          h4
            span.quote-mark â€œ
            = quote.text
        i
      .item-author.media
        a.pull-left(href=links.topic(quote.author.uniqueName, {ul: currentCulture.lang}))
          img.media-object(src=util.entipicImage(quote.author, currentCulture), alt='')
        .media-body
          a.author-name(href=links.topic(quote.author.uniqueName, {ul: currentCulture.lang}))= quote.author.name
          span.details , 
            = util.moment(quote.createdAt).locale(currentCulture.lang).from(currentDate, true)
          if (currentDate.getTime() - new Date(quote.createdAt).getTime() < 1000 * 60 * 60 * 24 * 10)
            .details
              a(href=links.item(quote.webpage.uniqueName, quote.webpage.id))= util.wrapAt(quote.webpage.title, 100)
          else
            .details= util.wrapAt(quote.webpage.title, 100)
