extends _layouts/news

block main_content
  .item.ot-story.view-item
    h1= story.title
    .item-details +
      = story.countNews
      |  
      = __('news')
      |,  
      span.stats-badge(title=__('views'))= story.countViews
        |  
        span.icon.icon-views
      | , 
      time= util.moment(story.createdAt).locale(currentCulture.lang).format('lll')
    .row
      .col-sm-8
        .image
          img.story-img(alt=story.title, src=links.wi('large', story.imageId))
          .details= __('photo')
            | : 
            = story.imageHost
      .col-sm-4
        .col-sm-12.col-xs-7
          .list.ot-topic.view-alist
            each item in story.topics
              a(title=item.name, href=links.topic(item.uniqueName))= (item.abbr || item.name)
        .col-sm-12.col-xs-5
          .our-sharedata(data-appname='ournet', data-identifier=shareInfo.identifier, data-title=shareInfo.title, data-cid=shareInfo.clientId)
            each service in config.shareDataServices
              a.our-share-item(class=service, data-service=service, href=shareInfo.getShareUrl(service), rel='nofollow', target='_blank', title=util.format(__('share_on_format'),util.startWithUpperCase(service)))
                span.share-icon
                  i
                span.share-count.hidden
    .item-body
      p!= util.htmlText(story.summary)
        |  – 
        a.source(rel='nofollow', target='_blank', href=links.url(util.crypto.encrypt(story.host+story.path)))= story.host.replace(/^www\./, '')
      each item in story.news
        p!= util.htmlText(item.summary)
          if (item.host)
            |  – 
            a.source(rel='nofollow', target='_blank', href=links.url(util.crypto.encrypt(item.host+item.path)))= item.host.replace(/^www\./, '')
