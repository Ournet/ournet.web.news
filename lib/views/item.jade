extends _layouts/news

block main_content
  .item.ot-story.view-item
    h1= story.title
    .item-details
      span.stats-badge(title=__('views'))= story.countViews
        |  
        span.icon.icon-views
      | , 
      time= util.moment(story.createdAt).locale(currentCulture.lang).format('lll')
    .row
      if (story.imageId)
        .col-sm-8
          .item-image
            img.story-img(alt=story.title, src=links.wi.news('large', story.imageId))
            .details
        .col-sm-4
          .col-sm-12.col-xs-7
            .list.ot-topic.view-alist
              each item in story.topics
                a(title=item.name, href=links.topic(item.uniqueName))= (item.abbr || item.name)
          .col-sm-12.col-xs-5
            .our-sharedata.pull-right(data-appname='ournet', data-identifier=shareInfo.identifier, data-title=shareInfo.title, data-cid=shareInfo.clientId)
              each service in config.shareDataServices
                a.our-share-item(class=service, data-service=service, href=shareInfo.getShareUrl(service), rel='nofollow', target='_blank', title=util.format(__('share_on_format'),util.startWithUpperCase(service)))
                  span.share-icon
                    i
                  span.share-count.hidden
      else
        .col-xs-7
            .list.ot-topic.view-alist
              each item in story.topics
                a(title=item.name, href=links.topic(item.uniqueName))= (item.abbr || item.name)
          .col-xs-5
            .our-sharedata(data-appname='ournet', data-identifier=shareInfo.identifier, data-title=shareInfo.title, data-cid=shareInfo.clientId)
              each service in config.shareDataServices
                a.our-share-item(class=service, data-service=service, href=shareInfo.getShareUrl(service), rel='nofollow', target='_blank', title=util.format(__('share_on_format'),util.startWithUpperCase(service)))
                  span.share-icon
                    i
                  span.share-count.hidden
    .item-body
      p!= util.htmlText(story.summary)
        |  â€“ 
        a.source(rel='nofollow', target='_blank', href=util.toUrl(story))= story.host.replace(/^www\./, '')

  br
  .fb-comments(data-href=site.head.canonical, data-width='100%', data-numposts='5', data-colorscheme='light')
block append second_content
  .tab
    h4.tab-title= __('related_news')
    .tab-content
      +newsSimpleView(relatedNews, true)

block scripts
  -var fbCulture = currentCulture.lang+'_'+currentCulture.lang.toUpperCase()
  script.
    (function(d, s, id) {
    var js, fjs = d.getElementsByTagName(s)[0];
    if (d.getElementById(id)) return;
    js = d.createElement(s); js.id = id;
    js.src = "//connect.facebook.net/#{fbCulture}/sdk.js#xfbml=1&version=v2.3&appId=#{config.facebookId}";
    fjs.parentNode.insertBefore(js, fjs);
    }(document, 'script', 'facebook-jssdk'));