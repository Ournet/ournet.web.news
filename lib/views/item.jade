extends _layouts/news

block main_content
  .item.ot-story.view-item
    h1= story.title
    .item-details
      time= util.moment(story.createdAt).locale(currentCulture.lang).format('lll')
    include ./controls/item_header
    .item-body
      p!= util.htmlText(story.summary)
        |  â€“ 
        a.source(rel='nofollow', target='_blank', href=util.toUrl(story))= story.host.replace(/^www\./, '')

  br
  #disqus_thread
  script(type='text/javascript').
    var disqus_shortname = '#{config.disqusId}';
    var disqus_identifier = 'webpage-#{story.id}';
    var disqus_url = '#{site.head.canonical}';
    var disqus_config = function() { this.language = '#{currentCulture.lang}'; };
    /* * * DON'T EDIT BELOW THIS LINE * * */
    (function() {
    var dsq = document.createElement('script');
    dsq.type = 'text/javascript';
    dsq.async = true;
    dsq.src = '//' + disqus_shortname + '.disqus.com/embed.js';
    (document.getElementsByTagName('head')[0] || document.getElementsByTagName('body')[0]).appendChild(dsq);
    })();
block append second_content
  .tab
    h4.tab-title= __('latest_news')
    .tab-content
      +newsSimpleView(relatedNews, {isStory: true, wrapAt: 100})

