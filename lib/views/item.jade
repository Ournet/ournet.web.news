extends _layouts/news

block main_content
  .item.ot-story.view-item
    h1= story.title
    .item-details
      time= util.moment(story.createdAt).locale(currentCulture.lang).format('lll')
    include ./controls/item_header
    .item-body
      p!= util.htmlText(story.summary)
        |  â€“ 
        a.source(rel='nofollow', target='_blank', href=util.toUrl(story))= story.host.replace(/^www\./, '')

  br
  .fb-comments(data-href=site.head.canonical, data-width='100%', data-numposts='5', data-colorscheme='light')
block append second_content
  .tab
    h4.tab-title= __('latest_news')
    .tab-content
      +newsSimpleView(relatedNews, {isStory: true, wrapAt: 100})

block scripts
  -var fbCulture = currentCulture.lang+'_'+currentCulture.lang.toUpperCase()
  script.
    (function(d, s, id) {
    var js, fjs = d.getElementsByTagName(s)[0];
    if (d.getElementById(id)) return;
    js = d.createElement(s); js.id = id;
    js.src = "//connect.facebook.net/#{fbCulture}/sdk.js#xfbml=1&version=v2.3&appId=#{config.facebookId}";
    fjs.parentNode.insertBefore(js, fjs);
    }(document, 'script', 'facebook-jssdk'));