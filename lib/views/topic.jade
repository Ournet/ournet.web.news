extends _layouts/news

block main_content
  .content-header.media
    .pull-left
      img.media-object(alt='', src='http://cdn.entipic.com/'+currentCulture.country+'/'+topic.uniqueName+'.jpg')
    .media-body
      h1= title
      .details= subtitle

  if (mainItem)
    +newsLargeViewItem(mainItem)
    br
  else if(mainStory)
    +newsLargeViewItem(mainStory, true)
    br

  +storiesRowView(stories, 'col-xs-6 col-sm-4')

  br
  .tab.view-ads.view-fill.gads-468.no-margin
    // Ournet 468x60
    ins.adsbygoogle(data-ad-client='ca-pub-3959589883092051', data-ad-slot='3749376618')
    script.
      (adsbygoogle = window.adsbygoogle || []).push({});

block second_content
  p.topic-informer= topic.description

block more_content
  .container
    .row
      //- left content
      .col-md-2.hidden-sm.hidden-xs
        .grid-control
          .grid-header
            h4= __('ads')
          .grid-content
            // Ournet 150x
            ins.adsbygoogle(style='display:block', data-ad-client='ca-pub-3959589883092051', data-ad-slot='4687909432', data-ad-format='auto')
            script.
              (adsbygoogle = window.adsbygoogle || []).push({});

      //- center content
      .col-md-6.col-sm-8
        .grid-control
          .grid-header
            h2= util.format(__('topic_latest_news'), topic.name)
          .grid-content
            +newsSimpleView(latestNews)
      //- right content
      .col-md-4.col-sm-4
        .grid-control.view-ads
          .grid-content
            // Ournet v2.0 300x250
            ins.adsbygoogle(style='display:inline-block;width:300px;height:250px', data-ad-client='ca-pub-3959589883092051', data-ad-slot='9372961467')
            script.
              (adsbygoogle = window.adsbygoogle || []).push({});

        .grid-control.view-ads
          .grid-content
