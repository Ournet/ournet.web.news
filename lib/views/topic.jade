extends _layouts/news

block main_content
  .content-header.media
    .pull-left
      img.media-object(alt='', src='http://cdn.entipic.com/'+currentCulture.country+'/'+topic.uniqueName+'.jpg')
    .media-body
      h1= title
      .details= subtitle

  if (mainItem)
    +newsLargeViewItem(mainItem)
    br
  else if(mainStory)
    +newsLargeViewItem(mainStory, true)
    br

  +storiesRowView(stories, 'col-xs-6 col-sm-4')

  if (stories.length>2)
    .list-footer
      a.more(href=links.topicStories(topic.uniqueName, {ul: currentCulture.lang}))= __('more_stories')
        |  &rsaquo;
  else
    br
    .tab.view-ads.view-fill.gads-468.no-margin
      include controls/ads_468

block second_content
  if (topic.description)
    p.topic-informer= topic.description
  if (quotes && quotes.length>0)
    .tab
      //- h4.tab-title= __('quotes')
      .tab-content
        +quotesList(quotes)

    if (quotes.length>2)
      .list-footer
        a.more(href=links.topicQuotes(topic.uniqueName, {ul: currentCulture.lang}))= __('more_quotes')
          |  &rsaquo;
  else
    .tab.view-ads.view-fill.gads-300-250
      include controls/ads_300
